# HSV utilities portal login
HSV_USERNAME=emailexample.com
HSV_PASSWORD=password

# ECOBEE portal login
ECOBEE_USERNAME=emailexample.com
ECOBEE_PASSWORD=password


# Data Collection Intervals/Periods

ELECTRIC_INTERVAL=HOURLY            # HSVUtils electricity interval: HOURLY, DAILY, MONTHLY, 15_MIN
GAS_INTERVAL=HOURLY                 # HSVUtils gas usage interval: HOURLY, DAILY, MONTHLY
WATER_INTERVAL=MONTHLY              # HSVUtils water usage interval: MONTHLY (as of 10/2025 hsv utils only reports monthly stats unfortunately)
ECOBEE_INTERVAL=5_MIN               # Ecobee thermostat data interval: 5_MIN (required by Ecobee API, do not change)

# Number of days of data to collect/analyze
DATA_PERIOD_DAYS=7          # Set to -1 for all available data, or a positive integer (e.g., 7, 30) for a fixed time period.


# Energy Analysis & Home Assistant Integration

# Home Assistant server URL, e.g. http://localhost:8123 or http://homeassistant.local:8123
HA_URL=http://homeassistant.local:8123

# Home Assistant long-lived access token (created from your HA user profile)
HA_TOKEN=your_long_lived_access_token_here

ANALYSIS_ENABLED=true
AUTO_GENERATE_REPORTS=true
SAVE_PLOTS=true         # saves to /plots directory


# Notification Settings

ENABLE_NOTIFICATIONS=true           # notifications for home assistant
EFFICIENCY_THRESHOLD=60         # percent number (e.g. 60 for HVAC usage alerts)
COST_ALERT_THRESHOLD=15.00          # Daily energy cost threshold (dollar/currency amount, e.g. 15.00)
